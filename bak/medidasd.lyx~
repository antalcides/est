rule{0.01in}{0.17in}
\end_layout

\end_inset

Solución
\begin_inset Newline linebreak
\end_inset

Primer cuartil 
\begin_inset Formula 
\[
\frac{n}{4}=25\Rightarrow N_{i}>\frac{n}{4}=39\Rightarrow Q_{1}=2
\]

\end_inset

 
\begin_inset Newline linebreak
\end_inset

Segundo cuartil 
\begin_inset Formula 
\[
\frac{2n}{4}=50\Rightarrow N_{i}>\frac{2n}{4}=65\Rightarrow Q_{2}=3
\]

\end_inset

 
\begin_inset Newline linebreak
\end_inset

Tercer cuartil 
\begin_inset Formula 
\[
\frac{3n}{4}=75\Rightarrow N_{i}>\frac{3n}{4}=85\Rightarrow Q_{3}=4
\]

\end_inset


\end_layout

