\begin_inset Formula 
\[
(A\cup B)^{\prime}=A^{\prime}\cap B^{\prime}\;\text{y}\;(A\cap B)^{\prime}=A^{\prime}\cup B^{\prime}.
\]

\end_inset


\end_layout

\begin_layout Enumerate
4.
